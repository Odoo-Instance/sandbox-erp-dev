<?xml version="1.0"?>
<odoo>
    <record id="sale_order_view_receipt_sequence_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.receipt.sequence</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_id']" position="after" >
                <field name="show_warning" invisible="1" />
                <field name="sale_reference" />
                <field name="remaning_receipts_count" readonly="1" />
            </xpath>
        </field>
    </record>
</odoo>
